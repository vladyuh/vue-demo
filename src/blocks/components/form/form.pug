//- selects
mixin select(data)
  .select
    if data.label
      span.label=data.label
    if data.required
      select(name=data.name required data-title=data.title)
        each item,index in data.data
          if index === 0
            option(value="" disabled selected)=item
          else
            option(value="item")=item
    else
      select(name=data.name data-title=data.title)
        each item,index in data.data
          if index === 0
            option(value="" disabled selected)=item
          else
            option(value="item")=item
